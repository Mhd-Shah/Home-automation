/* 
  Sketch generated by the Arduino IoT Cloud Thing "Untitled"
  https://create.arduino.cc/cloud/things/53ec832f-b43f-4654-95ab-9fe191841da4 

  Arduino IoT Cloud Variables description

  The following variables are automatically generated and updated when changes are made to the Thing

  int fAN; //variable to control the speed of the fan manually
  bool auto_fan;// there is an auto switch to switch between automatic mode and manual mode

  Variables which are marked as READ/WRITE in the Cloud Thing will also have functions
  which are called when their values are changed from the Dashboard.
  These functions are generated with the Thing and added at the end of this sketch.
*/

#include "thingProperties.h"
// connecting an external temperature sensor (DS18B20).
#include <OneWire.h> 
#include <DallasTemperature.h>  
const int SENSOR_PIN = 36;// The temperature sensor is connected to pin 36 
OneWire oneWire(SENSOR_PIN); 
DallasTemperature tempSensor(&oneWire); 
float tempCelsius;

void setup() {
  // Initialize serial and wait for port to open:
  Serial.begin(9600);
  // This delay gives the chance to wait for a Serial Monitor without blocking if none is found
  delay(1500); 

  // Defined in thingProperties.h
  initProperties();

  // Connect to Arduino IoT Cloud
  ArduinoCloud.begin(ArduinoIoTPreferredConnection);
  setDebugMessageLevel(2);
  ArduinoCloud.printDebugInfo();
  tempSensor.begin();
}

void loop() {
  ArduinoCloud.update();
 
}

void onFANChange()  {
// To manually control the speed.
  if(auto_fan == true){
    if(fAN == 0){
    // a fan regulator is designed with 3 ports to control the speed of the fan
    // See the circuit
      digitalWrite(15,LOW);
      digitalWrite(2,LOW);
      digitalWrite(0,LOW);
    }
    else if(fAN == 1){
      digitalWrite(15,LOW);
      digitalWrite(2,HIGH);
      digitalWrite(0,LOW);
    }
    else if(fAN == 2){
      digitalWrite(15,LOW);
      digitalWrite(2,LOW);
      digitalWrite(0,HIGH);
    }
    else if(fAN == 3){
      digitalWrite(15,LOW);
      digitalWrite(2,HIGH);
      digitalWrite(0,HIGH);
    }
    else{
      digitalWrite(15,HIGH);
      digitalWrite(2,LOW);
      digitalWrite(0,LOW);
    }
  }
  
}
void onAutoFanChange()  {
// control the speed of the fan base on tempaerature
  if (auto_fan == true){
    tempSensor.requestTemperatures(); 
    tempCelsius = tempSensor.getTempCByIndex(0); 
    if(tempCelsius < 25){
       digitalWrite(15,LOW);
       digitalWrite(2,LOW);
       digitalWrite(0,LOW);
    }
    else if(tempCelsius<30){
       digitalWrite(15,LOW);
       digitalWrite(2,HIGH);
       digitalWrite(0,LOW);
    }
    else if(tempCelsius<35){
       digitalWrite(15,LOW);
       digitalWrite(2,LOW);
       digitalWrite(0,HIGH);
    }
    else if(tempCelsius<40){
       digitalWrite(15,LOW);
       digitalWrite(2,HIGH);
       digitalWrite(0,HIGH);
    }
    else{
      digitalWrite(15,HIGH);
      digitalWrite(2,LOW);
      digitalWrite(0,LOW); 
    
    }
  
  }
} 
