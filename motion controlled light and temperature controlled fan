/* 
  Sketch generated by the Arduino IoT Cloud Thing "Untitled"
  https://create.arduino.cc/cloud/things/53ec832f-b43f-4654-95ab-9fe191841da4 

  Arduino IoT Cloud Variables description

  The following variables are automatically generated and updated when changes are made to the Thing

  CloudTemperatureSensor temperature;
  int fAN;
  CloudSchedule plug;
  bool auto_fan;
  bool light;

  Variables which are marked as READ/WRITE in the Cloud Thing will also have functions
  which are called when their values are changed from the Dashboard.
  These functions are generated with the Thing and added at the end of this sketch.
*/

#include "thingProperties.h"
#include <OneWire.h> 
#include <DallasTemperature.h>  
const int SENSOR_PIN = 36;
OneWire oneWire(SENSOR_PIN); 
DallasTemperature tempSensor(&oneWire); 
float tempCelsius;

unsigned long t = 0;
void setup() {
  // Initialize serial and wait for port to open:
  Serial.begin(9600);
  // This delay gives the chance to wait for a Serial Monitor without blocking if none is found
  delay(1500); 

  // Defined in thingProperties.h
  initProperties();

  // Connect to Arduino IoT Cloud
  ArduinoCloud.begin(ArduinoIoTPreferredConnection);
  setDebugMessageLevel(2);
  ArduinoCloud.printDebugInfo();
  tempSensor.begin();
}

void loop() {
  ArduinoCloud.update();
 
}

void onFANChange()  {
  if(auto_fan == true){
    if(fAN == 0){
    //3 ports used to control fan
      digitalWrite(15,LOW);
      digitalWrite(2,LOW);
      digitalWrite(0,LOW);
    }
    else if(fAN == 1){
      digitalWrite(15,LOW);
      digitalWrite(2,HIGH);
      digitalWrite(0,LOW);
    }
    else if(fAN == 2){
      digitalWrite(15,LOW);
      digitalWrite(2,LOW);
      digitalWrite(0,HIGH);
    }
    else if(fAN == 3){
      digitalWrite(15,LOW);
      digitalWrite(2,HIGH);
      digitalWrite(0,HIGH);
    }
    else{
      digitalWrite(15,HIGH);
      digitalWrite(2,LOW);
      digitalWrite(0,LOW);
    }
  }
  
}

void onLightChange()  {
  //normal turning off/on of light
  if(light == true){
    digitalWrite(4,HIGH);//light is connected to pin  4
  }
  //controling using pir,(pin 34)
  else if (digitalRead(34)== HIGH){
    t=millis();
    while(millis()<(t+5000)){
      digitalWrite(4,HIGH);
      //if motion continues we have to extend the time
      if((millis()>(t+2300))&&(digitalRead(34)==HIGH)){
        t=millis();
      }
    }
  }
  
}

void onPlugChange()  {
  if(plug.isActive()){
    digitalWrite(39,HIGH);
  }
    
}

void onAutoFanChange()  {
  if (auto_fan == true){
    tempSensor.requestTemperatures(); 
    tempCelsius = tempSensor.getTempCByIndex(0); 
    if(tempCelsius < 25){
       digitalWrite(15,LOW);
       digitalWrite(2,LOW);
       digitalWrite(0,LOW);
    }
    else if(tempCelsius<30){
       digitalWrite(15,LOW);
       digitalWrite(2,HIGH);
       digitalWrite(0,LOW);
    }
    else if(tempCelsius<35){
       digitalWrite(15,LOW);
       digitalWrite(2,LOW);
       digitalWrite(0,HIGH);
    }
    else if(tempCelsius<40){
       digitalWrite(15,LOW);
       digitalWrite(2,HIGH);
       digitalWrite(0,HIGH);
    }
    else{
      digitalWrite(15,HIGH);
      digitalWrite(2,LOW);
      digitalWrite(0,LOW); 
    
    }
  
  }
}  
